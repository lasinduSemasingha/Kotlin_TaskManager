<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color with opacity -->
    <solid android:color="#4DFFFFFF" /> <!-- Adjust opacity as needed (0.3 is approximately 33% opacity) -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" /> <!-- Adjust the radius to control the roundness of corners -->

    <!-- Size of the square -->
    <size
        android:width="48dp"
        android:height="48dp" /> <!-- Adjust width and height as needed -->

</shape>
